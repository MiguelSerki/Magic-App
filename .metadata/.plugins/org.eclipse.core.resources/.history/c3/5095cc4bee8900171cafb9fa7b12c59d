	/**
	 * Create the application.
	 */
	public MainWindow() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 800, 600);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JButton btnNuevoPedido = new JButton("Nuevo Pedido");
		btnNuevoPedido.setBounds(300, 100, 200, 100);
		frame.getContentPane().add(btnNuevoPedido);
		
		JButton btnCreditos = new JButton("Creditos");
		btnCreditos.setBounds(300, 254, 200, 100);
		frame.getContentPane().add(btnCreditos);
		
		JButton btnSalir = new JButton("Salir");
		btnSalir.setBounds(300, 400, 200, 100);
